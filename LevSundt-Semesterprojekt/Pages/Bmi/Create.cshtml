@page
@model LevSundt_Semesterprojekt.Pages.Bmi.CreateModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<h2>Opret BMI måling</h2>
<section class="row">
    <article class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="BmiModel.Height"></label>
                <input asp-for="BmiModel.Height" class="form-control"/>
                <span asp-validation.for="BmiModel.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BmiModel.Weight"></label>
                <input asp-for="BmiModel.Weight" class="form-control"/>
                <span asp-validation.for="BmiModel.Weight" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-default">Add BMI</button>
        </form>
    </article>
</section>