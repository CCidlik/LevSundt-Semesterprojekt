@model LevSundt_Semesterprojekt.Pages.Bmi.IndexModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Højde</th>
            <th>Vægt</th>
            <th>BMI</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.IndexViewModel.Any())
        {
            foreach (var bmi in Model.IndexViewModel)
            {
                <tr>
                    <td> @bmi.Id </td>
                    <td>@bmi.Height</td>
                    <td>@bmi.Weight</td>
                    <td>@bmi.Bmi</td>
                    @*<td></td> dato dd/mm/YYYY*@
                    <td>
                        <!-- <snippet_Edit> -->
                        @*                        <a asp-page="./Edit" asp-route-id="@bmi.Id">Edit</a>*@
                        <!-- </snippet_Edit> -->
                        <!-- <snippet_Delete> -->
                        @*                        <button type="submit" asp-page-handler="delete" asp-route-id="@bmi.Id">delete</button>*@
                        <!-- </snippet_Delete> -->
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-page="Create">Create New</a>
    @*Punkt grafer (en for vægt og en for bmi) der opdateres efter en ny bmi entry er oprettet (r?)*@
</form>
       
